<%= form_for [@post, @reply] do |f| %>
<form class="form-horizontal" role="form">
	
	<div class="form-group">
		<div class="input-group">
			<%= f.text_field :content, size: 50, class: 'form-control' %>
		</div>
	</div>

	<div class="btn-group">
		<%= f.submit class: "btn btn-primary" %>
	</div>
	
</form>
<% end %>