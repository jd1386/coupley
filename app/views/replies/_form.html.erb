<%= form_for @new_reply, url: post_replies_path(post), html: { method: :post } do |f| %>
<form class="form-horizontal" role="form">
	<div class="media" id="replies-list">
	  <a class="pull-left" href="#">
	    <%= image_tag(gravatar_url(current_user), width: 38, class: "img-circle") %>
	  </a>
	  <div class="media-body">
	    <div class="form-group">
	    	<div class="input-group">
			    <%= f.text_field :content, size: 70 %>
			    <%= f.submit value: 'Reply', class: 'btn btn-default' %>
		    </div>
	    </div>
	  </div>
	</div>
</form>
<% end %>